<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="10dip">

    <ImageView
        android:layout_width="100dip"
        android:layout_height="150dip"
        android:id="@+id/moviePosterView"
        android:scaleType="centerCrop"
        android:src="@drawable/poster_placeholder"/>

    <TextView
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bienvenue Ã  Gattaca"
        android:id="@+id/movieTitleText"
        android:layout_below="@+id/moviePosterView"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:maxLines="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5 min"
        android:background="@android:color/darker_gray"
        android:id="@+id/movieTimeRemainingText"
        android:layout_above="@+id/movieTitleText"
        android:layout_alignLeft="@+id/moviePosterView"
        android:padding="5dip"/>

</RelativeLayout>
