<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/theaterImagePlaceholder"
        android:src="@drawable/theater_maps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gaumont parnasse"
        android:id="@+id/theaterFragmentName"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/theaterImagePlaceholder"
        android:layout_toEndOf="@+id/theaterImagePlaceholder"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Informations"
        android:id="@+id/theaterFragmentInfo"
        android:layout_below="@+id/theaterFragmentName"
        android:layout_alignLeft="@+id/theaterFragmentName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Distance"
        android:id="@+id/theaterFragmentDistance"
        android:layout_below="@+id/theaterFragmentInfo"
        android:layout_alignLeft="@+id/theaterFragmentInfo" />
</RelativeLayout>