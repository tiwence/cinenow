<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UGC Ciné Cité"
        android:id="@+id/theaterNameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dip"
        android:maxLines="1"
        android:textStyle="bold"/>

    <it.sephiroth.android.library.widget.HListView
        android:id="@+id/hListView"
        android:layout_below="@+id/theaterNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:background="@color/background"
        android:listSelector="@drawable/hlistview_selector"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theaterNameText"
        android:text="@string/no_more_next_showtimes"
        android:id="@+id/noshowtimesPlaceholder"
        android:paddingRight="5dip"
        android:paddingLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"/>


</RelativeLayout>
