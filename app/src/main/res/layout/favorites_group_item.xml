<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/favorite_state_selector">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/favoriteMoviePoster"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/poster_placeholder"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titre"
        android:layout_margin="5dp"
        android:id="@+id/favoriteMovieName"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/favoriteMoviePoster" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Infos"
        android:layout_margin="5dp"
        android:id="@+id/favoriteMovieInfos"
        android:layout_below="@+id/favoriteMovieName"
        android:layout_toRightOf="@+id/favoriteMoviePoster"
        android:layout_toEndOf="@+id/favoriteMoviePoster" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/favoriteMoviePoster"
        android:id="@+id/favoritesMovieShowTimesLayout"
        android:layout_below="@+id/favoriteMovieInfos">
    </LinearLayout>

</RelativeLayout>
